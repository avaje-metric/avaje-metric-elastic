{
  "template": "metric-*",
  "order": 1,
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1
  },
  "mappings": {

    "metric" : {
      "_all": { "enabled": false  },
      "properties": {
        "type": { "type": "string", "index": "not_analyzed"},
        "name": { "type": "string", "index": "not_analyzed"},
        "bucket": { "type": "string", "index": "not_analyzed"},
        "env": { "type": "string", "index": "not_analyzed"},
        "app": { "type": "string", "index": "not_analyzed"},
        "pod": { "type": "string", "index": "not_analyzed"},
        "ts": { "type": "date"},
        "norm" : {
          "properties" : {
            "count" : { "type": "long"},
            "avg" : { "type": "long"},
            "max" : { "type": "long"},
            "sum" : { "type": "long"},
            "dur" : { "type": "long"}
          }
        },
        "error" : {
          "properties" : {
            "count" : { "type": "long"},
            "avg" : { "type": "long"},
            "max" : { "type": "long"},
            "sum" : { "type": "long"},
            "dur" : { "type": "long"}
          }
        },
        "val" : { "type": "double"}
      }
    }

  }
}